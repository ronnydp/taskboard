<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
  </head>
  <body>
    <form action="/board/create/<%= board_id_max %>" method="POST">
      <div class="modal-board" id="modalBoard">
        <div class="modal-board-content">
          <h2>Board Not Found</h2>
          <p>Please enter the name of the new board:</p>
          <input
            name="board_name"
            type="text"
            id="modalBoardName"
            placeholder="Board Name"
            required
          />
          <div>
            <button type="submit" id="saveBoardBtn">Save</button>
            <button type="button" id="cancelBoardBtn" onclick="cancelBoard()">Cancel</button>
            <script>
              function cancelBoard(){
                window.history.back();
              }
            </script>
          </div>
        </div>
      </div>
    </form>
  </body>
</html>
